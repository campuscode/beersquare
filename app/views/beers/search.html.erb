<% if @beers.empty? %>
  <div class='alert alert-warning' role='alert'>
    <%= flash[:notice] = 'Cerveja nÃ£o encontrada' %>
  </div>
<% else %>
  <% @beers.each do |beer| %>
    <div class="card" style="width: 18rem;">
      <div class="card-header">
        <%= beer.name %>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">Estilo: <%= beer.style %></li>
        <li class="list-group-item">ABV: <%= beer.abv %>%</li>
        <li class="list-group-item">IBU: <%= beer.ibu %></li>
      </ul>
    </div>
    <br>
  <% end %>
<% end %>

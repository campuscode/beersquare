<div class="md-5 position-fixed">
  <div class="card card--dark md-5 box-shadow">
    <div class="card-img-top">
      <img src="..." alt="Card image cap">
    </div>
    <div class="card-body">
      <h3 class="card-title"><%= @beer.name %></h3>
    </div>
    <div class="card-body">
      <div class="list-group list-group-flush">
        <ul class="list-group list-group-flush">
          <li class="list-group-item text-light bg-dark"><h4>Estilo: <%= @beer.style %></h4></p>
          <li class="list-group-item text-light bg-dark">Cervejaria: <%= @beer.brewery %></li>
          <li class="list-group-item text-light bg-dark">ABV: <%= @beer.abv %>%</li>
          <li class="list-group-item text-light bg-dark">IBU: <%= @beer.ibu %></li>
          <li class="list-group-item text-light bg-dark">Nacionalidade: <%= @beer.nationality %></li>
          <li class="list-group-item text-light bg-dark">Descrição: <%= @beer.description %></li>
        </ul>
      </div>
    </div>
  </div>
</div>

<% if @beer.bars.empty? %>
  <div class="alert alert-danger" role="alert">No momento nenhum bar está oferecendo esta cerveja</div>
<% else %>
  <div style="margin-left: 450px">
    <% @beer.bars.each do |bar| %>
      <%= render partial: "shared/bar", locals: {bar: bar} %>
    <% end %>
  </div>
<% end %>

<div class="row justify-content-center white-bg">
  <div class="col-6">
    <h2> Log in </h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="field">
          <label for="exampleInputEmail1"><%= f.label :email %><br </label>
          <%= f.email_field :email, autofocus: true, placeholder: 'email@dominio.com', class: 'form-control form-control-lg' %>
        </div>

        <div class="field">
          <%= f.label :password %><br>
          <%= f.password_field :password, placeholder: '', class: 'form-control form-control-lg' %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "Log in" %>
        </div>
    <% end %>
  </div>
</div>
<%= render "users/shared/links" %>
